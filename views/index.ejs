<%- include("partials/header") %>
<body>

    <div class="login_container">
        <h2>Login</h2>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="email_login">Usuário:</label>
                <input type="text" id="email_login" name="email_login" required>
            </div>
            <div class="form-group">
                <label for="password_login">Senha:</label>
                <input type="password" name="password_login" id="password_login" required>
            </div>
            <button type="submit">Login</button>

            <div class="form-registred">
                <p>Caso não possua cadastro, não tem problema basta se registrar no botão abaixo!: <a href="register.ejs">Registra-se</a></p>
                
            </div>

        </form>
    </div>

</body>
<% include("partials/footer") %>